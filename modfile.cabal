name:                modfile
version:             0.1.0.0
synopsis:            read and write files generated by music trackers 
description:         Please see README.md
homepage:            https://github.com/riottracker/modfile#readme
license:             BSD3
license-file:        LICENSE
author:              kohlrabi
maintainer:          kohlrabi@kohlra.biz
copyright:           2016 kohlrabi
category:            music
build-type:          Simple
extra-source-files:  examples/readIT.hs, examples/readXM.hs, examples/readS3M.hs
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Data.Module.IT
                     , Data.Module.IT.Instrument
                     , Data.Module.IT.Pattern
                     , Data.Module.IT.Header
                     , Data.Module.IT.Sample
                     , Data.Module.XM
                     , Data.Module.XM.Instrument
                     , Data.Module.XM.Pattern
                     , Data.Module.XM.Header
                     , Data.Module.XM.SampleHeader
                     , Data.Module.S3M
                     , Data.Module.S3M.Header
                     , Data.Module.S3M.Instrument
                     , Data.Module.S3M.Instrument.PCM
                     , Data.Module.S3M.Instrument.Adlib
                     , Data.Module.S3M.Pattern
  other-modules:       Util
  build-depends:       base >= 4.7 && < 5
                     , binary
                     , split
                     , monad-loops
  default-language:    Haskell2010

test-suite modfile-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , modfile
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

executable example-readit
  main-is:             readIT.hs
  build-depends:       base >= 4.7 && < 5
                     , modfile
                     , binary
                     , bytestring
  hs-source-dirs:      examples
  default-language:    Haskell2010

executable example-readxm
  main-is:             readXM.hs
  build-depends:       base >= 4.7 && < 5
                     , modfile
                     , binary
                     , bytestring
  hs-source-dirs:      examples
  default-language:    Haskell2010

executable example-reads3m
  main-is:             readS3M.hs
  build-depends:       base >= 4.7 && < 5
                     , modfile
                     , binary
                     , bytestring
  hs-source-dirs:      examples
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/riottracker/modfile
